@using Microsoft.AspNetCore.Identity
@using RentOrExchange.WebApp.Areas.Identity.Data
@{
    ViewData["Title"] = "Home Page";
}

@inject UserManager<MyAppUser> UserManager

<div>
    <h1 class="display-4 text-center">Welcome!</h1>
    <br />
    @if (User.IsInRole("AppUser"))
    {
        @Html.ActionLink("Post your item", "CreatePost", "AppUser", new {}, new { @class = "btn btn-primary" })
    }
    else if (User.IsInRole("Developer"))
    {
        <h4>Hello Developer !!!</h4>
    }
    else if (User.IsInRole("Tester"))
    {
        <h4>Hello Tester !!!</h4>
    }
    
    else if (User.IsInRole("Admin"))
    {
        <h4>Welcome back Nadia!</h4>
    }
    else
    {
        <h4>Login to your account.</h4>
    }

</div>
